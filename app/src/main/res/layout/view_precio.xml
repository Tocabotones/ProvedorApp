<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvPrecioEntero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13"
        android:textColor="@color/contrasteCeleste"
        android:textColorLink="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPrecioDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=",89"
        android:textColor="@color/black"
        android:textColorLink="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvPrecioEntero"
        app:layout_constraintStart_toEndOf="@+id/tvPrecioEntero"
        app:layout_constraintTop_toTopOf="@+id/tvPrecioEntero"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/tvPrecioAnterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="19,99"
        android:textColor="@color/black"
        android:textColorLink="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPrecioDecimal"
        app:layout_constraintStart_toEndOf="@+id/tvPrecioDecimal" />
</androidx.constraintlayout.widget.ConstraintLayout>